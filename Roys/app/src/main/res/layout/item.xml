<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="1">
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/empty"
      android:layout_alignParentTop="true" android:layout_alignParentStart="true"
      android:scaleType="fitXY"
      android:id="@+id/listViewImage" android:layout_alignBottom="@+id/TimeView"/>
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content" app:srcCompat="@android:color/background_light"
      android:layout_alignParentStart="true"
      android:id="@+id/showText" android:layout_alignParentTop="true"
      android:layout_alignBottom="@+id/listViewImage" android:alpha="0.8"/>
  <TextView
      android:id="@+id/TitleView"
      android:layout_width="match_parent"
      android:gravity="center_vertical" android:textAlignment="gravity"
      android:layout_alignParentTop="true" android:layout_alignParentStart="true"
      android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:textSize="16sp"
      android:layout_marginRight="10dp" android:textStyle="normal|bold"
      android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
  <TextView
      android:id="@+id/TimeView"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center_vertical" android:textAlignment="gravity"
      android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
      android:textColor="@android:color/darker_gray" android:layout_below="@+id/TitleView"
      android:layout_alignStart="@+id/TitleView" android:layout_marginTop="16dp"/>
</RelativeLayout>