<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <android.support.v4.view.ViewPager
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="458dp"
      app:layout_behavior="@string/appbar_scrolling_view_behavior" android:layout_margin="0dp"
      android:layout_marginBottom="0dp" android:layout_marginEnd="0dp"
      android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
      android:layout_marginStart="0dp" android:layout_marginTop="0dp"/>
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|bottom"
      app:srcCompat="@android:drawable/ic_dialog_dialer"
      app:backgroundTint="@android:color/holo_red_light" android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true" android:layout_marginRight="20dp"/>
</LinearLayout>