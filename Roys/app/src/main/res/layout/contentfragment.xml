<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragmentLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" app:srcCompat="@android:color/background_light"
        android:id="@+id/backImage" android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
        android:layout_margin="0dp" android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
        android:layout_marginStart="0dp" android:layout_marginTop="0dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" app:srcCompat="@android:color/background_dark"
        android:id="@+id/imageView" android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" android:alpha="0.7" android:elevation="2dp"/>
  </RelativeLayout>
  <TextView
      android:text="title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp" android:id="@+id/title"
      android:textColor="@android:color/background_light"
      android:textStyle="bold"
      android:layout_above="@+id/summary" android:layout_alignStart="@+id/summary"
      android:layout_marginLeft="10dp" android:textSize="21dp" android:layout_marginRight="10dp"
      android:layout_marginTop="50dp"/>
  <TextView
      android:text="three line summary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/summary"
      android:textColor="@android:color/background_light"
      android:textSize="17dp" android:layout_marginLeft="10dp" android:layout_marginRight="20dp"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="false"
      android:layout_centerInParent="false"/>
</RelativeLayout>