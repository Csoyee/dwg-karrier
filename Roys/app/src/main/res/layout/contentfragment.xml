<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent" app:srcCompat="@color/colorAccent"
      android:id="@+id/backImage" android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
      android:layout_margin="0dp" android:layout_marginBottom="0dp"
      android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
      android:layout_marginStart="0dp" android:layout_marginTop="0dp"/>
  <TextView
      android:text="three line summary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/summary"
      android:textColor="@android:color/background_light"
      android:layout_centerVertical="true" android:layout_centerHorizontal="true"
      android:textSize="40dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
  />
  <TextView
      android:text="title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp" android:id="@+id/title"
      android:textColor="@android:color/background_light" android:textSize="30dp"
      android:layout_above="@+id/summary" android:layout_alignStart="@+id/summary"
      android:layout_marginLeft="10dp"/>
</RelativeLayout>